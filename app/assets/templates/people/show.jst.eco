<h1><%= @person.get('name') %></h1>

<div id='description'>
	<p><%= @person.get('description') %></p>
	<div class='form'>
		<form data-field='description'>
			<textarea class="input-field"><%= @person.get('description') %></textarea>
			<input type="submit" value="Save">
			<a class='show' data-field='description'>X</a>
		</form>
	</div>
	<a class='edit' data-field='description'>Edit</a>
</div>